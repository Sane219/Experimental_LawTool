# Legal Document Summarizer Configuration

# Model Configuration
MODEL_NAME=facebook/bart-large-cnn

# File Handling Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_CHUNK_SIZE=1024

# Logging Configuration
LOG_LEVEL=INFO

# Cache Configuration
CACHE_DIR=./model_cache

# Security Configuration
SSL_CERT_FILE=  # Path to SSL certificate file (optional)
SSL_KEY_FILE=   # Path to SSL private key file (optional)

# HTTPS Configuration
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=10
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
TEMP_FILE_CLEANUP_INTERVAL_MINUTES=5

# Development Settings (set to false in production)
GENERATE_SELF_SIGNED_CERT=true